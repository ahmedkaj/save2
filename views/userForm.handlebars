<section>
    <h2>{{title}}</h2>

    <form id="form">
        {{#if appear}}
        <label>
            Name: 
            <input type="text" id="input-name">
        </label>
        {{/if}}
        <label>
            Email:
            <input type="email" id="input-email">
        </label>
        <label>
            Password
            <input type="password" id="input-password">
        </label>

        <input type="submit" value="{{title}}">
    </form>
</section>